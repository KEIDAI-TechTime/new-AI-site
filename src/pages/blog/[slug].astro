---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navigation from '@/components/Navigation.astro';
import { getPost, getAllPostSlugs, getPageRecordMap, BLOG_CATEGORIES, formatDate } from '@/lib/notion';
import NotionPage from '@/components/NotionPage.astro';

export async function getStaticPaths() {
  const slugs = await getAllPostSlugs();
  return slugs.map((slug) => ({ params: { slug } }));
}

const { slug } = Astro.params;
const post = await getPost(slug as string);

if (!post) {
  return Astro.redirect('/blog');
}

// Get recordMap for react-notion-x
const recordMap = await getPageRecordMap(post.id);

const title = `${post.title} | TechTime株式会社`;
const description = post.excerpt || post.title;
---

<BaseLayout title={title} description={description} ogImage={post.coverImage}>
  <Navigation currentPath="/blog" />

  <div class="min-h-screen bg-white">
    <article class="pt-20 sm:pt-24 lg:pt-32 pb-16 sm:pb-24 px-4 sm:px-6">
      <div class="max-w-3xl mx-auto">
        <!-- Header -->
        <header class="mb-10">
          <div class="flex items-center gap-3 mb-6">
            <span class="text-sm text-gray-500 font-medium">{formatDate(post.createdAt)}</span>
            {post.category && BLOG_CATEGORIES[post.category] && (
              <span class="px-3 py-1 bg-[#00D9FF]/10 text-[#00D9FF] text-sm font-medium rounded-full">
                {BLOG_CATEGORIES[post.category].name}
              </span>
            )}
          </div>
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">{post.title}</h1>
        </header>

        <!-- Cover Image -->
        {post.coverImage && (
          <div class="mb-12 rounded-xl overflow-hidden shadow-lg">
            <img src={post.coverImage} alt={post.title} class="w-full h-auto" />
          </div>
        )}

        <!-- Content rendered by react-notion-x -->
        {recordMap ? (
          <NotionPage recordMap={recordMap} pageId={post.id} />
        ) : (
          <div class="blog-content" set:html={post.content} />
        )}

        <!-- Back Link -->
        <div class="mt-16 pt-8 border-t border-gray-200">
          <a href="/blog" class="inline-flex items-center gap-2 text-[#00D9FF] hover:gap-3 transition-all duration-300">
            <i class="ri-arrow-left-line"></i>
            ブログ一覧に戻る
          </a>
        </div>
      </div>
    </article>
  </div>
</BaseLayout>

<style is:global>
  /* react-notion-x styles override */
  .notion-page {
    padding: 0 !important;
    min-height: auto !important;
    width: 100% !important;
  }

  .notion-page-content {
    padding: 0 !important;
  }

  /* Reduce block spacing */
  .notion-block {
    margin-top: 0.25rem !important;
    margin-bottom: 0.25rem !important;
  }

  .notion-text {
    font-size: 1.125rem !important;
    line-height: 1.8 !important;
    color: #374151 !important;
    padding: 0.25rem 0 !important;
  }

  .notion-h1 {
    font-size: 2rem !important;
    font-weight: 800 !important;
    color: #111827 !important;
    margin-top: 2.5rem !important;
    margin-bottom: 1rem !important;
    padding-bottom: 0.75rem !important;
    border-bottom: 3px solid #00D9FF !important;
  }

  .notion-h2 {
    font-size: 1.5rem !important;
    font-weight: 700 !important;
    color: #111827 !important;
    margin-top: 2rem !important;
    margin-bottom: 0.75rem !important;
    padding-left: 1rem !important;
    border-left: 4px solid #00D9FF !important;
  }

  .notion-h3 {
    font-size: 1.25rem !important;
    font-weight: 700 !important;
    color: #111827 !important;
    margin-top: 1.5rem !important;
    margin-bottom: 0.5rem !important;
  }

  /* List styling - tighter spacing */
  .notion-list {
    margin: 0.5rem 0 !important;
    padding-left: 1.5rem !important;
  }

  .notion-list-disc {
    list-style-type: disc !important;
  }

  .notion-list-numbered {
    list-style-type: decimal !important;
  }

  .notion-list li {
    margin-bottom: 0.25rem !important;
    padding: 0.125rem 0 !important;
    color: #374151 !important;
    line-height: 1.7 !important;
  }

  .notion-list li::marker {
    color: #00D9FF !important;
  }

  .notion-quote {
    border-left: 4px solid #00D9FF !important;
    padding: 0.75rem 1.25rem !important;
    margin: 1rem 0 !important;
    background: #f0f9ff !important;
    border-radius: 0 0.5rem 0.5rem 0 !important;
    font-style: normal !important;
  }

  .notion-callout {
    display: flex !important;
    gap: 0.75rem !important;
    padding: 1rem 1.25rem !important;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%) !important;
    border-radius: 0.75rem !important;
    margin: 1rem 0 !important;
    border: 1px solid #bae6fd !important;
  }

  .notion-callout-icon {
    font-size: 1.25rem !important;
    flex-shrink: 0 !important;
  }

  .notion-callout-text {
    margin: 0 !important;
    line-height: 1.6 !important;
  }

  .notion-code {
    background: #1f2937 !important;
    color: #e5e7eb !important;
    padding: 1.5rem !important;
    border-radius: 0.75rem !important;
    overflow-x: auto !important;
    margin: 1.5rem 0 !important;
  }

  .notion-inline-code {
    background: #f3f4f6 !important;
    color: #0891b2 !important;
    padding: 0.2rem 0.4rem !important;
    border-radius: 0.25rem !important;
    font-size: 0.9em !important;
  }

  .notion-hr {
    border: none !important;
    border-top: 2px solid #e5e7eb !important;
    margin: 2.5rem 0 !important;
  }

  .notion-link {
    color: #0891b2 !important;
    text-decoration: underline !important;
    text-underline-offset: 3px !important;
    text-decoration-color: #00D9FF !important;
  }

  .notion-link:hover {
    color: #0e7490 !important;
  }

  .notion-toggle {
    margin: 1rem 0 !important;
  }

  .notion-toggle-content {
    padding-left: 1.5rem !important;
    border-left: 2px solid #e5e7eb !important;
    margin-left: 0.5rem !important;
  }

  .notion-table {
    width: 100% !important;
    border-collapse: collapse !important;
    margin: 1.5rem 0 !important;
  }

  .notion-table th,
  .notion-table td {
    border: 1px solid #e5e7eb !important;
    padding: 0.75rem 1rem !important;
    text-align: left !important;
  }

  .notion-table th {
    background: #f9fafb !important;
    font-weight: 600 !important;
  }

  .notion-asset-wrapper {
    margin: 1.5rem 0 !important;
  }

  .notion-asset-wrapper img {
    border-radius: 0.75rem !important;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1) !important;
  }

  .notion-bookmark {
    display: flex !important;
    border: 1px solid #e5e7eb !important;
    border-radius: 0.75rem !important;
    overflow: hidden !important;
    margin: 1.5rem 0 !important;
    text-decoration: none !important;
  }

  .notion-bookmark:hover {
    background: #f9fafb !important;
  }

  /* Bold text highlight */
  .notion-text b,
  .notion-text strong {
    color: #111827 !important;
    font-weight: 700 !important;
    background: linear-gradient(transparent 60%, #fef08a 60%) !important;
  }

  /* Hide page title (we show our own) */
  .notion-page-title,
  .notion-collection-header {
    display: none !important;
  }
</style>
