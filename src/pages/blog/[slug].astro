---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navigation from '@/components/Navigation.astro';
import { getPost, getAllPostSlugs, getPageRecordMap, BLOG_CATEGORIES, formatDate } from '@/lib/notion';
import NotionPage from '@/components/NotionPage.astro';

export async function getStaticPaths() {
  const slugs = await getAllPostSlugs();
  return slugs.map((slug) => ({ params: { slug } }));
}

const { slug } = Astro.params;
const post = await getPost(slug as string);

if (!post) {
  return Astro.redirect('/blog');
}

// Get recordMap for react-notion-x
const recordMap = await getPageRecordMap(post.id);

const title = `${post.title} | TechTime株式会社`;
const description = post.excerpt || post.title;
---

<BaseLayout title={title} description={description} ogImage={post.coverImage}>
  <Navigation currentPath="/blog" />

  <div class="min-h-screen bg-white">
    <article class="pt-20 sm:pt-24 lg:pt-32 pb-16 sm:pb-24 px-4 sm:px-6">
      <div class="max-w-3xl mx-auto">
        <!-- Header -->
        <header class="mb-10">
          <div class="flex items-center gap-3 mb-6">
            <span class="text-sm text-gray-500 font-medium">{formatDate(post.createdAt)}</span>
            {post.category && BLOG_CATEGORIES[post.category] && (
              <span class="px-3 py-1 bg-[#00D9FF]/10 text-[#00D9FF] text-sm font-medium rounded-full">
                {BLOG_CATEGORIES[post.category].name}
              </span>
            )}
          </div>
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">{post.title}</h1>
        </header>

        <!-- Cover Image -->
        {post.coverImage && (
          <div class="mb-12 rounded-xl overflow-hidden shadow-lg">
            <img src={post.coverImage} alt={post.title} class="w-full h-auto" />
          </div>
        )}

        <!-- Content rendered by react-notion-x -->
        {recordMap ? (
          <NotionPage recordMap={recordMap} pageId={post.id} />
        ) : (
          <div class="blog-content" set:html={post.content} />
        )}

        <!-- Back Link -->
        <div class="mt-16 pt-8 border-t border-gray-200">
          <a href="/blog" class="inline-flex items-center gap-2 text-[#00D9FF] hover:gap-3 transition-all duration-300">
            <i class="ri-arrow-left-line"></i>
            ブログ一覧に戻る
          </a>
        </div>
      </div>
    </article>
  </div>
</BaseLayout>

<style is:global>
  /* =====================================================
     NOTION BLOG CONTENT STYLES
     Styles for both react-notion-x and HTML fallback
     ===================================================== */

  /* Base container reset */
  .notion-page-wrapper,
  .blog-content {
    font-family: ui-sans-serif, -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, "Hiragino Sans", "Hiragino Kaku Gothic ProN", "Hiragino Sans GB", "Noto Sans CJK JP", "Noto Sans JP", Arial, sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: #37352f;
  }

  /* =====================================================
     REACT-NOTION-X STYLES
     ===================================================== */
  .notion-page {
    padding: 0 !important;
    min-height: auto !important;
    width: 100% !important;
    font-family: ui-sans-serif, -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, "Hiragino Sans", "Hiragino Kaku Gothic ProN", "Hiragino Sans GB", "Noto Sans CJK JP", "Noto Sans JP", Arial, sans-serif !important;
  }

  .notion-page-content {
    padding: 0 !important;
  }

  /* Block spacing - Notion style (very tight) */
  .notion-block {
    margin-top: 1px !important;
    margin-bottom: 1px !important;
  }

  .notion-text {
    font-size: 16px !important;
    line-height: 1.5 !important;
    color: #37352f !important;
    padding: 3px 2px !important;
    margin: 0 !important;
  }

  .notion-h1,
  .notion-page-wrapper .notion-h1 {
    font-size: 1.875em !important;
    font-weight: 600 !important;
    color: #37352f !important;
    margin-top: 2rem !important;
    margin-bottom: 4px !important;
    padding: 3px 2px !important;
    line-height: 1.3 !important;
    border-bottom: none !important;
  }

  .notion-h2,
  .notion-page-wrapper .notion-h2 {
    font-size: 1.5em !important;
    font-weight: 600 !important;
    color: #37352f !important;
    margin-top: 1.4rem !important;
    margin-bottom: 1px !important;
    padding: 3px 2px !important;
    padding-left: 0 !important;
    border-left: none !important;
    line-height: 1.3 !important;
  }

  .notion-h3,
  .notion-page-wrapper .notion-h3 {
    font-size: 1.25em !important;
    font-weight: 600 !important;
    color: #37352f !important;
    margin-top: 1rem !important;
    margin-bottom: 1px !important;
    padding: 3px 2px !important;
    line-height: 1.3 !important;
  }

  /* List styling - Notion style */
  .notion-list,
  .notion-page-wrapper ul,
  .notion-page-wrapper ol {
    margin: 0 !important;
    padding-left: 1.5em !important;
  }

  .notion-list-disc,
  .notion-page-wrapper ul {
    list-style-type: disc !important;
  }

  .notion-list-numbered,
  .notion-page-wrapper ol {
    list-style-type: decimal !important;
  }

  .notion-list li,
  .notion-page-wrapper li {
    margin: 0 !important;
    padding: 3px 0 !important;
    color: #37352f !important;
    line-height: 1.5 !important;
    font-size: 16px !important;
    display: list-item !important;
  }

  .notion-list li::marker,
  .notion-page-wrapper li::marker {
    color: #37352f !important;
  }

  .notion-quote {
    border-left: 3px solid #37352f !important;
    padding: 0.2em 0.9em !important;
    margin: 4px 0 !important;
    background: transparent !important;
    border-radius: 0 !important;
    font-size: 16px !important;
    line-height: 1.5 !important;
  }

  .notion-callout {
    display: flex !important;
    gap: 8px !important;
    padding: 16px 16px 16px 12px !important;
    background: rgba(241, 241, 239, 0.5) !important;
    border-radius: 4px !important;
    margin: 4px 0 !important;
    border: none !important;
  }

  .notion-callout-icon {
    font-size: 1.2em !important;
    flex-shrink: 0 !important;
    width: 24px !important;
    height: 24px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }

  .notion-callout-text {
    margin: 0 !important;
    line-height: 1.5 !important;
    font-size: 16px !important;
  }

  .notion-callout-text .notion-text {
    padding: 0 !important;
  }

  .notion-code {
    background: #f7f6f3 !important;
    color: #37352f !important;
    padding: 32px 16px 32px 32px !important;
    border-radius: 4px !important;
    overflow-x: auto !important;
    margin: 4px 0 !important;
    font-family: SFMono-Regular, Menlo, Consolas, "PT Mono", "Liberation Mono", Courier, monospace !important;
    font-size: 85% !important;
    line-height: 1.5 !important;
  }

  .notion-inline-code {
    background: rgba(135, 131, 120, 0.15) !important;
    color: #eb5757 !important;
    padding: 0.2em 0.4em !important;
    border-radius: 3px !important;
    font-size: 85% !important;
    font-family: SFMono-Regular, Menlo, Consolas, "PT Mono", "Liberation Mono", Courier, monospace !important;
  }

  .notion-hr {
    border: none !important;
    border-top: 1px solid rgba(55, 53, 47, 0.16) !important;
    margin: 8px 0 !important;
  }

  .notion-link {
    color: #37352f !important;
    text-decoration: underline !important;
    text-underline-offset: 2px !important;
    text-decoration-color: rgba(55, 53, 47, 0.4) !important;
  }

  .notion-link:hover {
    color: #37352f !important;
    text-decoration-color: #37352f !important;
  }

  .notion-toggle {
    margin: 0 !important;
  }

  .notion-toggle-content {
    padding-left: 1.5em !important;
    border-left: none !important;
    margin-left: 0 !important;
  }

  .notion-table {
    width: max-content !important;
    max-width: 100% !important;
    border-collapse: collapse !important;
    margin: 4px 0 !important;
    font-size: 16px !important;
  }

  .notion-table th,
  .notion-table td {
    border: 1px solid rgb(233, 233, 231) !important;
    padding: 7px 9px !important;
    text-align: left !important;
    line-height: 1.5 !important;
    min-width: 120px !important;
  }

  .notion-table th {
    background: rgb(247, 246, 243) !important;
    font-weight: 600 !important;
  }

  .notion-asset-wrapper {
    margin: 4px 0 !important;
  }

  .notion-asset-wrapper img {
    border-radius: 0 !important;
    box-shadow: none !important;
    max-width: 100% !important;
  }

  .notion-bookmark {
    display: flex !important;
    border: 1px solid rgba(55, 53, 47, 0.16) !important;
    border-radius: 4px !important;
    overflow: hidden !important;
    margin: 4px 0 !important;
    text-decoration: none !important;
  }

  .notion-bookmark:hover {
    background: rgba(55, 53, 47, 0.03) !important;
  }

  /* Bold text - Notion style */
  .notion-text b,
  .notion-text strong,
  .notion-page-wrapper b,
  .notion-page-wrapper strong {
    color: #37352f !important;
    font-weight: 600 !important;
    background: none !important;
  }

  /* Hide page title (we show our own) */
  .notion-page-title,
  .notion-collection-header {
    display: none !important;
  }

  /* =====================================================
     HTML FALLBACK STYLES (.blog-content)
     For when react-notion-x recordMap is not available
     ===================================================== */
  .blog-content {
    width: 100%;
  }

  .blog-content p {
    font-size: 16px;
    line-height: 1.7;
    color: #37352f;
    margin-bottom: 1em;
  }

  .blog-content h1 {
    font-size: 1.875em;
    font-weight: 600;
    color: #37352f;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .blog-content h2 {
    font-size: 1.5em;
    font-weight: 600;
    color: #37352f;
    margin-top: 1.8rem;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .blog-content h3 {
    font-size: 1.25em;
    font-weight: 600;
    color: #37352f;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .blog-content ul {
    list-style-type: disc;
    padding-left: 1.5em;
    margin: 1em 0;
  }

  .blog-content ol {
    list-style-type: decimal;
    padding-left: 1.5em;
    margin: 1em 0;
  }

  .blog-content li {
    display: list-item;
    padding: 0.25em 0;
    color: #37352f;
    line-height: 1.6;
  }

  .blog-content blockquote {
    border-left: 3px solid #37352f;
    padding: 0.5em 1em;
    margin: 1em 0;
    background: transparent;
    font-size: 16px;
    line-height: 1.6;
    color: #37352f;
  }

  .blog-content pre {
    background: #f7f6f3;
    color: #37352f;
    padding: 1em;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1em 0;
    font-family: SFMono-Regular, Menlo, Consolas, monospace;
    font-size: 85%;
    line-height: 1.5;
  }

  .blog-content code {
    background: rgba(135, 131, 120, 0.15);
    color: #eb5757;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 85%;
    font-family: SFMono-Regular, Menlo, Consolas, monospace;
  }

  .blog-content pre code {
    background: transparent;
    color: inherit;
    padding: 0;
    font-size: inherit;
  }

  .blog-content hr {
    border: none;
    border-top: 1px solid rgba(55, 53, 47, 0.16);
    margin: 2em 0;
  }

  .blog-content a {
    color: #37352f;
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: rgba(55, 53, 47, 0.4);
  }

  .blog-content a:hover {
    text-decoration-color: #37352f;
  }

  .blog-content img {
    max-width: 100%;
    height: auto;
    margin: 1em 0;
  }

  .blog-content figure {
    margin: 1em 0;
  }

  .blog-content figcaption {
    font-size: 14px;
    color: #6b7280;
    margin-top: 0.5em;
    text-align: center;
  }

  .blog-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1em 0;
    font-size: 16px;
  }

  .blog-content th,
  .blog-content td {
    border: 1px solid rgb(233, 233, 231);
    padding: 8px 12px;
    text-align: left;
    line-height: 1.5;
  }

  .blog-content th {
    background: rgb(247, 246, 243);
    font-weight: 600;
  }

  /* Callout styling for HTML fallback */
  .blog-content .callout {
    display: flex;
    gap: 12px;
    padding: 16px;
    background: rgba(241, 241, 239, 0.5);
    border-radius: 4px;
    margin: 1em 0;
  }

  .blog-content .callout-icon {
    font-size: 1.3em;
    flex-shrink: 0;
    line-height: 1;
  }

  .blog-content .callout p {
    margin: 0;
  }

  /* Details/Toggle styling */
  .blog-content details {
    margin: 1em 0;
  }

  .blog-content details summary {
    cursor: pointer;
    font-weight: 500;
    padding: 0.5em 0;
  }

  .blog-content details > div,
  .blog-content details > p {
    padding-left: 1.5em;
  }

  /* Indent for nested content */
  .blog-content .indent {
    padding-left: 1.5em;
  }

  /* Embed/Video container */
  .blog-content .embed {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    margin: 1em 0;
  }

  .blog-content .embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Strong/Bold text styling */
  .blog-content strong,
  .blog-content b {
    font-weight: 600;
    color: #37352f;
  }

  /* Emphasis/Italic text */
  .blog-content em,
  .blog-content i {
    font-style: italic;
  }

  /* Strikethrough */
  .blog-content del,
  .blog-content s {
    text-decoration: line-through;
  }

  /* Underline */
  .blog-content u {
    text-decoration: underline;
  }
</style>
