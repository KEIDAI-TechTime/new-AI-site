---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navigation from '@/components/Navigation.astro';

const title = '開発事例 | TechTime株式会社';
const description = 'TechTimeが手がけた基幹システム開発の事例をご紹介。様々な業種・規模のプロジェクト実績をご覧いただけます。';

const cases = [
  { id: 1, title: '製造業向け在庫管理システム', industry: '製造業', scale: '中規模', description: '複数拠点の在庫をリアルタイムで一元管理。発注の自動化により在庫コストを30%削減。' },
  { id: 2, title: '不動産会社向け顧客管理システム', industry: '不動産', scale: '小規模', description: '顧客情報と物件マッチングを効率化。成約率が1.5倍に向上。' },
  { id: 3, title: '物流会社向け配送管理システム', industry: '物流', scale: '大規模', description: '配送ルートの最適化と進捗の可視化。配送効率が25%改善。' },
];
---

<BaseLayout title={title} description={description}>
  <Navigation currentPath="/cases" />

  <div class="min-h-screen bg-gradient-to-br from-[#0A1628] via-[#0D1B2E] to-[#0A1628]">
    <div class="pt-20 sm:pt-24 lg:pt-32 pb-12 sm:pb-16 px-4 sm:px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">開発事例</h1>
          <p class="text-gray-300 text-sm sm:text-base max-w-2xl mx-auto">
            TechTimeが手がけた基幹システム開発の事例をご紹介します。<br />
            様々な業種・規模のお客様に、AI駆動開発による高品質・低価格なシステムを提供しています。
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {cases.map((c) => (
            <div class="group bg-white/5 backdrop-blur-xl rounded-2xl border border-white/10 overflow-hidden hover:border-[#00D9FF]/50 transition-all duration-300 hover:-translate-y-1">
              <div class="aspect-video bg-gradient-to-br from-[#1E40AF] to-[#3B82F6] flex items-center justify-center">
                <i class="ri-building-4-line text-6xl text-white/50"></i>
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  <span class="px-2 py-1 bg-[#00D9FF]/10 text-[#00D9FF] text-xs rounded-full">{c.industry}</span>
                  <span class="px-2 py-1 bg-white/10 text-gray-300 text-xs rounded-full">{c.scale}</span>
                </div>
                <h3 class="text-lg font-bold text-white mb-3 group-hover:text-[#00D9FF] transition-colors">{c.title}</h3>
                <p class="text-sm text-gray-400">{c.description}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-16 text-center">
          <p class="text-gray-400 mb-8">詳細な事例紹介をご希望の方は、お気軽にお問い合わせください。</p>
          <a href="/contact" class="inline-block px-8 py-4 bg-gradient-to-r from-[#00D9FF] to-[#0099FF] text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-[#00D9FF]/30 transition-all duration-300">
            お問い合わせ
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
